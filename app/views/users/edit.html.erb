<div class="parent1">
<div class="div11">




<div class='edit-user'>
    <h1 style="color: #4CAF50;">Edit Your Chatify Account</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="color: rgb(194, 70, 62);"><%= error %></p>
    <% end %>
    <% end %>

    <%= form_for @user do |f| %>
        <div class='sessions-input'>
           <p> <%= f.label :name %></p>
            <%= f.text_field :name %>
        </div>

        <div class='sessions-input'>
           <p> <%= f.label :age %></p>
           <%= f.number_field :age %>
        </div>

        <div class='sessions-input'>
            <p><%= f.label :username %></p>
          <%= f.text_field :username %> 
        </div>

        <div class='sessions-input'>
           <p> <%= f.label :password %></p>
           <p> <%= f.text_field :password %></p>
        </div>

        <%= f.submit "Update Profile", class: 'profile-btn' %>
    <% end %>

</div>

<%= button_to 'Delete Account', user_path(@user), method: :delete, class: 'profile-btn' %><br>

</div>
</div>