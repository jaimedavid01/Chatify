<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<div class='form-container'>
    <h1>Edit Your Chatify Account</h1>

    <%= form_for @user do |f| %>
        <div class='form-input'>
            <%= f.label :name %>
            <%= f.text_field :name %>
        </div>

        <div class='form-input'>
            <%= f.label :age %>
            <%= f.number_field :age %>
        </div>

        <div class='form-input'>
            <%= f.label :username %>
            <%= f.text_field :username %>
        </div>

        <div class='form-input'>
            <%= f.label :password %>
            <%= f.text_field :password %>
        </div>

        <%= f.submit "Update Profile", class: 'form-btn' %>
    <% end %>

</div>

<%= button_to 'Delete Account', user_path(@user), method: :delete %><br>