<div class='form-container'>
  <% if flash[:error] %>
    <p><%= flash[:error] %></p>
  <% end %>
  
    <%= form_for :session, url: sessions_path do |f| %>
      <div class='form-input'>
        <%= f.label :username %>
        <%= f.text_field :username %>
      </div>


      <div class='form-input'>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <%= f.submit "Login", class: 'form-btn' %>
      
    <% end %> 

</div>