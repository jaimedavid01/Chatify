

<!DOCTYPE html>
<html>
<head>
<style>

h2 {
  text-align: left;
  white-space: wrap;
  margin: 0;
  padding: 0;
  
}

h3 {
  text-align: right;
  white-space: wrap;
  margin: 0;
  padding: 0;
 
}

.parent {
display: grid;
grid-template-columns: repeat(5, 1fr);
grid-template-rows: repeat(4, 1fr);
grid-column-gap: 0px;
grid-row-gap: 0px;
}

.div1 { grid-area: 1 / 2 / 3 / 5; }
.div2 { grid-area: 3 / 2 / 4 / 5; }

.center {
  margin: auto;
  width: 60%;
  border: 0;
  padding: 10px;
  text-align: center;

}
img {
  display: block;
  margin-left: auto;
  margin-right: auto;
}

#overflowTest {
  background: 0;
  color: white;
  padding: 0px;
  width: 100%;
  height: 400px;
  overflow: scroll;
  border: 0px solid #ccc;
  white-space: wrap;
  margin: 0;
  padding: 0;

}
</style>
</head>
<body>



<div class="center">
  <h1><%= @album.title %></h1>
<p>Genre: <%= @album.genre %></p>
<p>Release Year: <%= @album.release_year %></p>

<img src="<%= @album.img_url %>" alt="<%= @album.title %>"  style="width:40%"><br>

<br>


<div class="parent">
<div class="div1" id="overflowTest"> 

<% @album.messages.each do |message| %>
  <h2><p><%= link_to message.user.username, user_path(message.user) %></p></h2>
  <h2 class="<%= message.mood %>"> <%= message.content %></h2>
    <h2><% message.comments.each do |comment| %></h2>
      <h3><%= comment.user.username %></h3>
     <h3 style="background-color: grey;"> <%= comment.content %></h3>
    <% end %>

    <div class='form-container'>
      <% if flash[:error] %>
        <p><%= flash[:error] %></p>
      <% end %>
      <h3><%= form_for @comment do |f| %></h3>
        <h3><%= f.label :content %></h3>
        <h3><%= f.text_field :content %></h3>

       <h3> <%= f.hidden_field :message_id, value: message.id %></h3>
      
        <h3><%= f.submit "Comment" %></h3>
    
      <% end %>
    </div>
<% end %>

</div>
<div class="div2"> 


<h4>Join the Conversation Here</h4>

<%= form_for @message do |f| %>

    <%= f.label :mood %>
    <%= f.select :mood, [['happy'],['sad'],['angry']] %>
    <br>
    <% f.label :content %>
    <%= f.text_field :content %>
    <br>
    <%= f.hidden_field :album_id, value: @album.id %>
   
    <%= f.submit "Submit Message" %>

    <% if flash[:errors] %>
      <% flash[:errors].each do |error| %>
        <p><%= error %></p>
      <% end %>
    <% end %>
  
<% end %>



</div>
</div>
</div>

</body>
</html>














