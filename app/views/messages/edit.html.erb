<h1> Edit Your Message Here</h1>

<%= form_for @message do |f| %>

    <%= f.label :mood %>
    <%= f.select :mood, [['Happy'],['Sad'],['Angry']] %>
    <br>
    <%= f.label :comment %>
    <%= f.text_field :comment %>
    <br>
    <%= f.label :forum_id  %>
    <%= f.text_field :forum_id %>
    <%# f.radio_button :forum_id, 'Marvin Gaye' %>
   
    <%= f.submit "Submit Message" %>
  
<% end %>